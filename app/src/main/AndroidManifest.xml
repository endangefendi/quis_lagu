<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cobaa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_icon_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".activities.DashboarAdminActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait"/>

        <activity android:name=".activities.LoginAdminActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait"/>

        <activity android:name=".QuestionRandomActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait"/>

        <activity android:name=".StartGameActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait" />

        <activity android:name=".activities.IntroPageActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait"/>

        <activity android:name=".TestActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait"/>

        <activity android:name=".MapActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait"/>

        <activity android:name=".TesterActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait" />

        <activity android:name=".QuestionActivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait" />

        <activity android:name=".activities.SplashScreenAcitivity"
            android:theme="@style/TopRed"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>