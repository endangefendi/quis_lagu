<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".activities.admin.EditSoalRandomActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_3sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toStartOf="@+id/iv_add"
            android:layout_toEndOf="@+id/iv_back"
            android:fontFamily="@font/quicksand_bold"
            android:text="Edit Data Soal"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_3sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_baseline_edit"
            app:tint="@color/abu" />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="#EDEDED" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/frame_lagu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="#55000000"
                    android:backgroundTint="#55000000"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_lagu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:backgroundTint="#55000000"
                        android:hint="Judul Lagu"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:id="@+id/_lagu"
                    android:layout_weight="1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop"
                    />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_soal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Soal"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawaban 1"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawaban 2"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawaban 3"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawaban 4"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban_benar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Kunci Jawaban"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/frame_tipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="#55000000"
                    android:backgroundTint="#55000000"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_tipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:backgroundTint="#55000000"
                        android:hint="Tipe Soal"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:id="@+id/_tipe"
                    android:layout_weight="1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:visibility="visible"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:textColorHint="#55000000"
                    android:backgroundTint="#55000000"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_daerah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:backgroundTint="#55000000"
                        android:hint="Asal daerah"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView
                    android:id="@+id/_daerah"
                    android:layout_weight="1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_arrow_drop"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:visibility="gone"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:id="@+id/btn_cancel"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColor="@android:color/white"
                    android:text="Batal"
                    android:background="@drawable/bg_button"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:id="@+id/btn_add"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@android:color/white"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Simpan"
                    android:background="@drawable/bg_button_save"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>