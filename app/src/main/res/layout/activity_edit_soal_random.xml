<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".activities.EditSoalRandomActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_3sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toStartOf="@+id/iv_add"
            android:layout_toEndOf="@+id/iv_back"
            android:fontFamily="@font/quicksand_bold"
            android:text="Edit Soal Random"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_3sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_baseline_edit"
            app:tint="@color/abu" />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="#EDEDED" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/frame_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_25sdp"
                android:gravity="center"
                android:background="@drawable/border_linear"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/btnStart"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_play_button"
                    app:tint="#FFF"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/btnStop"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_stop"
                    app:tint="#FFF"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="*audio tidak dapat di rubah"/>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_soal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Soal"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawban 1"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawban 2"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawban 3"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Jawban 4"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#55000000"
                android:backgroundTint="#55000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_jawaban_benar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:backgroundTint="#55000000"
                    android:hint="Kunci Jawban"
                    android:inputType="textPersonName"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/frame_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:visibility="gone"
                android:orientation="horizontal">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:id="@+id/btn_cancel"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColor="@android:color/white"
                    android:text="Batal"
                    android:background="@drawable/bg_button"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:id="@+id/btn_add"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@android:color/white"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Simpan"
                    android:background="@drawable/bg_button_save"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>